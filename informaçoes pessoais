CREATE DATABASE Informacoes_Pessoais;

-
USE Informacoes_Pessoais;


CREATE TABLE Pessoas (
    ID INT PRIMARY KEY,
    Nome_Completo VARCHAR(200),
    Idade INT,
    Genero VARCHAR(100),
    Nacionalidade VARCHAR(100),
    Email VARCHAR(150),
    Estado_Civil VARCHAR(100),
    Nome_Pai VARCHAR(200),
    Nome_Mae VARCHAR(200)
);

