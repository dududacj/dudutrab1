velocidade = float(input("Qual é a velocidade do carro em km/h? "))

limite_velocidade = 80
valor_multa_por_km = 20.0

if velocidade > limite_velocidade:
    km_excedido = velocidade - limite_velocidade
    valor_multa = km_excedido * valor_multa_por_km
    
    print(f"Você foi multado! O valor da multa é de R${valor_multa:.2f}.")
else:
    print("Você está dentro do limite de velocidade.")

input("Pressione Enter para sair...")
